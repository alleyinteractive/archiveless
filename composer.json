{
    "name": "alleyinteractive/archiveless",
    "description": "WordPress plugin to hide posts from archives (lists)",
    "license": "GPL-3.0-or-later",
    "type": "wordpress-plugin",
    "authors": [
        {
            "name": "Alley",
            "email": "info@alley.co"
        }
    ],
    "homepage": "https://github.com/alleyinteractive/archiveless",
    "support": {
        "issues": "https://github.com/alleyinteractive/archiveless/issues",
        "source": "https://github.com/alleyinteractive/archiveless"
    },
    "require": {
        "php": ">=8.2"
    },
    "require-dev": {
        "alleyinteractive/alley-coding-standards": "^1.0",
        "mantle-framework/testkit": "^1.6"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "alleyinteractive/composer-wordpress-autoloader": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "sort-packages": true
    },
    "scripts": {
        "phpcbf": "phpcbf .",
        "phpcs": "phpcs .",
        "phpunit": "phpunit",
        "release": "npx @alleyinteractive/create-release@latest",
        "test": [
            "@phpcs",
            "@phpunit"
        ]
    }
}
